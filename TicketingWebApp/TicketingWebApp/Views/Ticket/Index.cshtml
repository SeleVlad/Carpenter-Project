@model IEnumerable<TicketingWebApp.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {


        <div class="col-md">
                    ID: @Html.TextBox("searchString")
                <input type="submit" value="Search" class="btn btn-default" name="submitButton" />
                <input type="submit" value="ExportJSON" class="btn btn-default"name="submitButton"/>
                <input type="submit" value="ExportXML" class="btn btn-default" name="submitButton" />
            </div>

    }



</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShowID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Row)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShowID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Row)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
