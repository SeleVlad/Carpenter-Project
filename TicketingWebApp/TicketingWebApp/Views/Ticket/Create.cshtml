@model TicketingWebApp.Models.Ticket

@{
    ViewBag.Title = "Create";
}



<h2>Create</h2>



@if (TempData["Message2"] != null)
{
    <p class="alert alert-danger" id="successMessage">@TempData["Message2"]</p>
}

@if (TempData["Message"] != null)
{
    <p class="alert alert-danger" id="successMessage">@TempData["Message"]</p>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
