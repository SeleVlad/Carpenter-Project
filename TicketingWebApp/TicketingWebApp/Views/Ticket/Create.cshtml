        <h4>Ticket</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.ShowID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ShowID, new SelectList(ViewBag.ShowsIDs, "Value", "Text"), new { @class = "form-control" })
               
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(m => m.ShowTitle, new { @class = "col-md-2 control-label" })
